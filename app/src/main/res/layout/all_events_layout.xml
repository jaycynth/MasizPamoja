<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/medium_margin"

    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/event_image_layout"
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/profile_bg"
            android:layout_height="250dp">

    <ImageView
        android:id="@+id/event_image"

        android:contentDescription="@string/event_photo"
        android:layout_width="match_parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

        </RelativeLayout>




            <TextView
                android:layout_below="@id/event_image_layout"
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:textColor="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@id/event_date"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:text="@string/this_is_the_name_of_the_event"/>



            <TextView
                android:id="@+id/tvReviewDescription"
                android:layout_width="wrap_content"
                android:layout_below="@id/event_title"
                android:layout_height="wrap_content"
                android:text="This is the events description"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:maxLines="4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLength="280"
                android:ellipsize="end"/>








    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>