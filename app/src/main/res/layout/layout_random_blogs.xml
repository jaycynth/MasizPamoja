<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/medium_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_margin="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:textSize="@dimen/field_text_size"
                android:textStyle="bold"
                android:text="@string/title"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="@dimen/activity_small_margin"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_message_black_24dp"
                    android:drawablePadding="@dimen/activity_small_margin"
                    android:text="@string/chat" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_share_black_24dp"
                    android:drawablePadding="@dimen/activity_small_margin"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/activity_large_margin"
                    android:layout_height="wrap_content"
                    android:id="@+id/share"
                    android:text="@string/share"/>

            </LinearLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>