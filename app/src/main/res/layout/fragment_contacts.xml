<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/medium_margin"
    tools:context=".views.fragments.Contacts">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_margin"

            android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masiz Pamoja"
            android:layout_margin="@dimen/medium_margin"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawablePadding="@dimen/medium_margin"
            android:layout_marginTop="4dp"
            android:text="0718164782"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_instagram"
                android:text="masizPamoja"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/medium_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_twitter"
                android:text="@string/masizPamojaTwitter"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/medium_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="@dimen/medium_margin"
                android:text="masizPamoja" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="masizpamoja@gmail.com"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginStart="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/medium_margin"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moi University"
                android:layout_margin="@dimen/medium_margin"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:text="0718164782"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_twitter"
                android:text="@string/moiuni"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/medium_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="moiuniversity@email.com"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="@dimen/medium_margin"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>